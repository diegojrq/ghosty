<Window x:Class="ghosty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ghosty"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="56*"/>
            <ColumnDefinition Width="163*"/>
            <ColumnDefinition Width="66*"/>
            <ColumnDefinition Width="515*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="BtnStartAction" Content="Start" HorizontalAlignment="Left" Margin="149,16,0,0" VerticalAlignment="Top" Click="BtnStartAction_Click" Grid.Column="3"/>
        <Label x:Name="LblLastInputTime" Content="Label" HorizontalAlignment="Right" Margin="0,36,10,0" VerticalAlignment="Top" Grid.Column="3"/>
        <Label x:Name="LblClock" Content="Label" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Grid.Column="3"/>
        <TextBox x:Name="TBInterval" Grid.Column="3" HorizontalAlignment="Left" Margin="10,18,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
